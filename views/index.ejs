<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Packing List</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/ea19d3d339.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="main-container">

    <div class ='form'>
      <h2>Add an item</h2>

      <form action="/packingitems" method="POST">
        <input type="text" placeholder="Item Name" name="name"><button type="submit">Submit</button>
      </form>
    </div>

    <div class="packing-list">
      <ul class="packingitems">
      <% for(let i=0; i<packingitems.length; i++) {%>
        <li class="message">
          <span class="item"><%= packingitems[i].name %></span>
          <span>   <i class="fa-solid fa-check" aria-hidden="true">   </i></span>
          <span>   <i class="fa-solid fa-x" aria-hidden="true">   </i></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </li>
      <% } %>
      </ul>
    </div>

  </div>
  <script src="main.js"></script>

</body>
</html>
